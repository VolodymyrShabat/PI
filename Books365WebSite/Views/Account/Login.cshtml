@model Books365WebSite.ViewModels.LoginViewModel



<html>

<head>
    <link rel="stylesheet" href="~/css/Login.css">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <title>Sign in</title>
</head>

<body>
    <div class="main">
        <p class="sign" align="center">Sign in</p>
        <form class="form1" method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div style="font-size:12px;" asp-validation-summary="ModelOnly"></div>
            <div class="input-div">
                <input class="un " type="text" align="center" placeholder="Username" asp-for="UserName" />
                <span class="validation" asp-validation-for="UserName"></span>
            </div>
            <div class="input-div">
                <input class="pass" align="center" placeholder="Password" asp-for="Password" />
                <span class="validation" asp-validation-for="Password"></span>
            </div>
            <div class="remember">
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" />
                <a style="margin-left:30px" asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
            </div>
            <div>
                <input class="submit" align="center" type="submit" value="Sign In" />
            </div>
            <div class="additional_info">
                <label>Don't have an account yet?</label>
                <a asp-controller="Account" asp-action="Register">Create a new one!</a>
            </div>
        </form>
    </div>

</body>

</html>
